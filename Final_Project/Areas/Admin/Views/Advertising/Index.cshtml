                    }
                    else if (item.numberOfRooms == numberOfRooms.tree)
                    {
                        <span>3</span>
                    }
                    else if (item.numberOfRooms == numberOfRooms.four)
                    {
                        <span>4</span>
                    }                   
                    else
                    {
                        <span>5</span>
                    }
                </td>
                <td>
                    @if (item.floor == floor.zero)
                    {
                        <span>0</span>
                    }
                    else if (item.floor == floor.one)
                    {
                        <span>1</span>
                    }
                    else if (item.floor == floor.tow)
                    {
                        <span>2</span>
