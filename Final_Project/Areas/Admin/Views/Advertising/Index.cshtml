                <td><label class="lblTow">@item.date</label></td>        
                <td>@item.Provience.title</td>       
                <td>@item.City_table.title</td>                                              
                <td>
                    @if (item.propertyType == PropertyType.apartment)
                    {
                        <span>آپارتمان</span>
                    }
                    else if (item.propertyType == PropertyType.Official)
                    {
                        <span>اداری</span>
                    }
                    else
                    {
                        <span>ویلایی</span>
                    }
                </td>
                <td><img src="@Href(item.imageUrl)" class="imgOne" /></td>
                <td>
                    @if (item.Condition == Condition.Ctrue)
                    {
                        <span>تایید شده</span>
                    }
                    else
                    {
                        <span>تایید نشده</span>
                    }
                </td>                                             
                <td><a href="/Admin/Advertising/Operation/@item.id" class="icon-edit-page"><i class="fas fa-pen"></i></a> | <a href="/Admin/Advertising/Delete/@item.id" class="icon-delete-page"><i class="fas fa-trash"></i></a></td>
