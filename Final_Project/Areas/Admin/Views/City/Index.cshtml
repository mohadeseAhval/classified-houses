@model List<ModelLib.City>
@{
    ViewBag.Title = "صفحه مدریت شهر ها ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="mt-3 ml-2"><h2 class="title-page">صفحه مدریت شهر ها</h2></div>
<section class="container-fluid pl-3 pr-3">
    <a href="/Admin/City/Operation" class="btn mt-3 btn-add">افزودن پست</a>
    <table class="table table-responsive-xl table-hover table-bordered table-striped table-page mt-3">
        <tr>
            <th>###</th>
            <th>ای دی استان</th>
            <th>نام استان</th>
            <th>نام شهر</th>
            <th>ویرایش / حذف</th>
        </tr> 

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>    
                <td>@item.Province_id</td>            
                <td>@item.Province_table.title</td>                
                <td>@item.title</td>
                <td><a href="/Admin/City/Operation/@item.id" class="icon-edit-page"><i class="fas fa-pen"></i></a> | <a href="/Admin/City/Delete/@item.id" class="icon-delete-page"><i class="fas fa-trash"></i></a></td>
            </tr>
        }      
    </table>
</section>
