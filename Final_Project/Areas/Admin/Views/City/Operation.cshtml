@model ModelLib.City
@using ModelLib;

@{
    EF_DataBase db = new EF_DataBase();
    var ProvincesTb = db.ProvincesTb.
        Select(item => new SelectListItem() { Text = item.title, Value = item.id.ToString() }).ToList();

    ViewBag.Title = "افزودن/اپدیت";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
<section class="container-fluid pl-3 pr-3">
    <div class="mt-3 ml-0"><h2 class="title-page">افزودن/اپدیت</h2></div>
    <form action="/Admin/City/Operation" method="post" enctype="multipart/form-data" class="mt-3">
        <input type="hidden" name="id" id="id" value="@Model.id" />
        <table class="table">
            <tr>
                <td>استان را انتخاب کنید</td> 
                <td>
                    @Html.DropDownListFor(item => item.Province_id, ProvincesTb, new { @class = "form-control" })
                </td>
            </tr>                     
            <tr>
                <td>نام شهر</td>
                <td>
                    <input type="text" id="title" name="title" class="form-control" value="@Model.title" />
                </td>
            </tr>
            
            <tr>
                <td>
                    <input type="submit" value="ذخیره" class="btn btn-success" />
                </td>
                <td>
                    <input type="reset" value="انصراف" class="btn btn-warning" />
                </td>
            </tr>
        </table>
    </form>
</section>