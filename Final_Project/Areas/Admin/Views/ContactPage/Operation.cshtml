@model ModelLib.ContactPage
@{
    ViewBag.Title = "افزودن/اپدیت";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="container-fluid pl-3 pr-3">
    <div class="mt-3 ml-0"><h2 class="title-page">افزودن/اپدیت</h2></div>
    <form action="/Admin/ContactPage/Operation" method="post" enctype="multipart/form-data" class="mt-3">
        <input type="hidden" name="id" id="id" value="@Model.id" />
        <table class="table">
            <tr>
                <td>شماره تماس</td>
                <td>
                    <input type="text" id="tell" name="tell" class="form-control" value="@Model.tell" />
                </td>
            </tr>
            <tr>
                <td>ساعات کاری</td>
                <td>
                    <input type="text" id="hoursOfWork" name="hoursOfWork" class="form-control" value="@Model.hoursOfWork" />
                </td>
            </tr>
            <tr>
                <td>آدرس</td>
                <td>
                    <input type="text" id="address" name="address" class="form-control" value="@Model.address" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="ذخیره" class="btn btn-success" />
                </td>
                <td>
                    <input type="reset" value="انصراف" class="btn btn-warning" />
                </td>
            </tr>
        </table>
    </form>
</section>