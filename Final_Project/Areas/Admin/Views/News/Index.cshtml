@using ModelLib.Enums;
@model List<ModelLib.News>

@*@model Tuple<List<ModelLib.News>>*@

@{
    ViewBag.Title = "صفحه مدریت پست ها";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Head{
    <link href="~/Content/stl.css" rel="stylesheet" />
}


<div class="mt-3 ml-2"><h2 class="title-page">صفحه مدریت پست ها</h2></div>
<section class="container-fluid pl-3 pr-3">
    <a href="/Admin/News/Operation" class="btn mt-3 btn-add">افزودن پست</a>
    <table class="table table-responsive table-hover table-bordered table-striped table-page mt-3">
        <tr>
            <th>###</th>
            <th>عنوان</th>
            <td>متن </td>            
            <th>تاریخ</th>
            <th>تاریخ سیستمی</th>
            <th>کلمات کلیدی</th>
            <th>تعداد بازدید</th>            
            <th>عکس</th>
            <th>نویسنده</th>
            <th>یوزرایدی</th>
            <th>نوع پست</th>
            <th>جایگاه</th>
            <th>ویرایش / حذف</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>               
                <td><label class="lblOne">@item.title</label></td>                
                <td><textarea class="teOne">@item.desc</textarea></td>              
                <td>@item.qdate</td>
                @*<td>@item.date</td>*@
                <td><label class="lblTow">@item.date</label></td>
                <td>@item.keyword</td>
                <td>@item.visitCount</td>                
                <td><img src="@Href(item.imageUrl)" class="imgOne" /></td>
                <td>@item.author</td>
                <td>@item.User_id</td>               
                <td>
                    @if(item.type== TypeNews.Buy)
                    {
                        <span>خرید</span>
                    }
                    else if (item.type == TypeNews.Rent)
                    {
                        <span>رهن و اجاره</span>
                    }
                    else
                    {
                        <span>فروش</span>
                    }                  
                </td>
                <td>
                    @if(item.cat==CatNews.Slider)
                    {
                        <span>اسلایدر</span>
                    }
                    else
                    {
                        <span>خبر</span>
                    }
                </td>
            <td><a href="/Admin/News/Operation/@item.id" class="icon-edit-page"><i class="fas fa-pen"></i></a> | <a href="/Admin/News/Delete/@item.id" class="icon-delete-page"><i class="fas fa-trash"></i></a></td>
        </tr>
        }
    </table>
</section>
