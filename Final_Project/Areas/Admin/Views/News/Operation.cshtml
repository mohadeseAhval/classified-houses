@model ModelLib.News
@{
    ViewBag.Title = "افزودن/اپدیت";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Head{
    <link href="~/Content/stl.css" rel="stylesheet" />
}
<section class="container-fluid pl-3 pr-3">
    <div class="mt-3 ml-0"><h2 class="title-page">افزودن/اپدیت</h2></div>
    <form action="/Admin/News/Operation" method="post" enctype="multipart/form-data" class="mt-3">
        <input type="hidden" name="id" id="id" value="@Model.id" />
        <input type="hidden" name="oldUrl" id="oldUrl" value="@Model.imageUrl" />
        <table class="table">
            <tr>
                <td>عنوان</td>
                <td>
                    <input type="text" id="title" name="title" class="form-control" value="@Model.title" />
                </td>
            </tr>
            <tr>
                <td>متن</td>
                <td>
                    <textarea name="desc" id="desc" class="form-control">@Model.desc</textarea>
                    
                </td>
            </tr>                       
            <tr>
                <td>کلمات کلیدی</td>
                <td>
                    <input type="text" id="keyword" name="keyword" class="form-control" value="@Model.keyword" />
                </td>
            </tr>
            <tr>
                <td>نوع پست</td>
                <td>                   
                    @Html.EnumDropDownListFor(item => item.type, new { @class ="form-control"})
                </td>
            </tr>
            <tr>
                <td>عکس</td>
                <td>
                    @if (!String.IsNullOrEmpty(Model.imageUrl))
                    {<img src="@Href(Model.imageUrl)" alt="Alternate Text" class="imgTow" />}
                    <input type="file" id="imageurl" name="imageurl" class="form-control" />
                </td>
            </tr>
            <tr>
                <td>جایگاه</td>
                <td>@Html.EnumDropDownListFor(item => item.cat,new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="ذخیره" class="btn btn-success" />
                </td>
                <td>
                    <input type="reset" value="انصراف" class="btn btn-warning" />
                </td>
            </tr>
        </table>
    </form>
</section>